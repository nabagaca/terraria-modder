{
  "id": "my-mod",
  "name": "My Mod",
  "version": "1.0.0",
  "author": "Your Name",
  "description": "A brief description of what this mod does.",
  "entry_dll": "ModTemplate.dll",

  "config_schema": {
    "enabled": {
      "type": "bool",
      "default": true,
      "label": "Enabled",
      "description": "Enable or disable this mod's features"
    },
    "exampleNumber": {
      "type": "int",
      "default": 10,
      "min": 1,
      "max": 100,
      "label": "Example Number",
      "description": "An example numeric setting"
    },
    "exampleFloat": {
      "type": "float",
      "default": 1.0,
      "min": 0.1,
      "max": 5.0,
      "step": 0.1,
      "label": "Example Scale",
      "description": "An example decimal setting"
    }
  },

  "keybinds": [
    {
      "id": "toggle",
      "label": "Toggle Feature",
      "description": "Toggle the main feature on/off",
      "default": "F7"
    }
  ]
}
