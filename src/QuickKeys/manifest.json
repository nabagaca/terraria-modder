{
  "id": "quick-keys",
  "name": "Quick Keys",
  "version": "1.0.0",
  "author": "Inidar",
  "description": "Hotkeys for auto-torch, recall, and quick stack",
  "entry_dll": "QuickKeys.dll",
  "config_schema": {
    "enabled": {
      "type": "bool",
      "default": true,
      "label": "Enabled",
      "description": "Master toggle for all QuickKeys features including auto-torch, recall, and quick stack hotkeys."
    },
    "showMessages": {
      "type": "bool",
      "default": false,
      "label": "Show Messages",
      "description": "Display chat notifications when using auto-torch, recall, or quick stack (e.g. 'Recalled home!')."
    },
    "enableExtendedHotbar": {
      "type": "bool",
      "default": false,
      "label": "Extended Hotbar (Slots 11-20)",
      "description": "Map NumPad 1-0 to inventory slots 11-20, letting you quick-use items from the second row of your inventory."
    }
  },
  "keybinds": [
    {
      "id": "auto-torch",
      "label": "Auto Torch",
      "description": "Place a torch near cursor",
      "default": "OemTilde"
    },
    {
      "id": "auto-recall",
      "label": "Auto Recall",
      "description": "Use recall item (mirror/phone)",
      "default": "Home"
    },
    {
      "id": "quick-stack",
      "label": "Quick Stack",
      "description": "Quick stack to nearby chests",
      "default": "End"
    },
    {
      "id": "ruler",
      "label": "Ruler",
      "description": "Toggle ruler distance overlay",
      "default": "K"
    },
    {
      "id": "hotbar-11",
      "label": "Hotbar Slot 11",
      "description": "Quick-use item in inventory slot 11",
      "default": "NumPad1"
    },
    {
      "id": "hotbar-12",
      "label": "Hotbar Slot 12",
      "description": "Quick-use item in inventory slot 12",
      "default": "NumPad2"
    },
    {
      "id": "hotbar-13",
      "label": "Hotbar Slot 13",
      "description": "Quick-use item in inventory slot 13",
      "default": "NumPad3"
    },
    {
      "id": "hotbar-14",
      "label": "Hotbar Slot 14",
      "description": "Quick-use item in inventory slot 14",
      "default": "NumPad4"
    },
    {
      "id": "hotbar-15",
      "label": "Hotbar Slot 15",
      "description": "Quick-use item in inventory slot 15",
      "default": "NumPad5"
    },
    {
      "id": "hotbar-16",
      "label": "Hotbar Slot 16",
      "description": "Quick-use item in inventory slot 16",
      "default": "NumPad6"
    },
    {
      "id": "hotbar-17",
      "label": "Hotbar Slot 17",
      "description": "Quick-use item in inventory slot 17",
      "default": "NumPad7"
    },
    {
      "id": "hotbar-18",
      "label": "Hotbar Slot 18",
      "description": "Quick-use item in inventory slot 18",
      "default": "NumPad8"
    },
    {
      "id": "hotbar-19",
      "label": "Hotbar Slot 19",
      "description": "Quick-use item in inventory slot 19",
      "default": "NumPad9"
    },
    {
      "id": "hotbar-20",
      "label": "Hotbar Slot 20",
      "description": "Quick-use item in inventory slot 20",
      "default": "NumPad0"
    }
  ]
}
