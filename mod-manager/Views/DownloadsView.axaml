<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TerrariaModManager.Views.DownloadsView">
    <Grid Margin="24,24,24,36" RowDefinitions="Auto,*">

        <TextBlock Text="Downloads" Classes="section-header" Grid.Row="0"/>

        <Border Grid.Row="1" Classes="card">
            <Grid>
                <TextBlock Text="No downloads yet.&#x0a;Click 'Download with Manager' on Nexus Mods to start."
                           Foreground="{StaticResource TextSecondaryBrush}" TextAlignment="Center"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           IsVisible="{Binding Downloads.Count, Converter={StaticResource CountToBool}, ConverterParameter=invert}"/>

                <ListBox ItemsSource="{Binding Downloads}"
                         Classes="dark">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4,4,4,8" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                    <Button Content="View on Nexus" FontSize="10" Padding="8,2" Margin="8,0,0,0"
                                            Classes="secondary" VerticalAlignment="Center"
                                            Command="{Binding $parent[UserControl].DataContext.OpenOnNexusCommand}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Status}"
                                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                             Value="{Binding Progress}" Maximum="100" Margin="0,6,0,2"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding ProgressText}"
                                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
